<h2>Editer un article</h2>
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= form_for(@article) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :content %>
      <%= f.text_area :content %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
